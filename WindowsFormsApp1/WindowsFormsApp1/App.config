<?xml version="1.0" encoding="utf-8" ?>
 <configuration>  
   <configSections>  
     <section name="nlog" type="NLog.Config.ConfigSectionHandler, NLog" /> 
  </configSections>   
  <startup>   
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.6.1" /> 
  </startup> 
  <nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">   
    <targets>    
      <target name="logfile" xsi:type="File" fileName="C://Logs//file.txt" layout="${level:uppercase=true}|${message}(${date:format=dd.MM.yyyy})"/>
      <target xsi:type="Mail"
          name="logMail"
          html="true"
          body="${message}"
          subject="Фатальная ошибка"
          smtpAuthentication="Basic"
          to="yuichka.ship@gmail.com"
          from="lettersforlaba@gmail.com"
          smtpUserName="lettersforlaba@gmail.com"
          smtpPassword="7687hey7687"
          smtpServer="smtp.gmail.com"
          smtpPort="25"
          layout="${level:uppercase=true}|${message}(${date:format=dd.MM.yyyy})"
 />
   </targets>   
  <rules>   
    <logger name="*" minlevel="Info" maxlevel="Error" writeTo="logfile" />
    <logger name="*" level="Fatal" writeTo="logMail" />
  </rules>  
 </nlog> 
</configuration> 